<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3.0" type="plugin" group="akpayment" method="upgrade">
	<name>PLG_AKPAYMENT_SKRILL</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2015 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>April 2015</creationDate>
	<version>5.0</version>
	<description>PLG_AKPAYMENT_SKRILL_DESCRIPTION</description>
	<files>
		<filename plugin="skrill">skrill.php</filename>
		<folder>skrill</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_skrill.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_skrill.sys.ini</language>
	</languages>
	<config addfieldpath="administrator/components/com_akeebasubs/assets/elements">
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_SKRILL_TITLE_LABEL" description="PLG_AKPAYMENT_SKRILL_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_SKRILL_PPIMAGE_LABEL" description="PLG_AKPAYMENT_SKRILL_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field name="typeCountryList" type="list" default="2"
					   label="PLG_AKPAYMENT_COMMON_COUNTRYLIST_TYPE_LABEL"
					   description="PLG_AKPAYMENT_COMMON_COUNTRYLIST_TYPE_DESC"
						>
					<option value="1">PLG_AKPAYMENT_COMMON_COUNTRYLIST_INCLUDE</option>
					<option value="2">PLG_AKPAYMENT_COMMON_COUNTRYLIST_EXCLUDE</option>
				</field>
				<field name="countryList" type="akeebasubscountries" default=""
					   multiple="true" size="5"
					   label="PLG_AKPAYMENT_COMMON_COUNTRYLIST_LABEL" />
        <field name="countryPriority" type="akeebasubscountries" default=""
               multiple="true" size="5"
               label="PLG_AKPAYMENT_COMMON_COUNTRYPIORITY_LABEL"
               description="PLG_AKPAYMENT_COMMON_COUNTRYPIORITY_DESC"
        />

				<field type="spacer" />
				<field name="merchant" type="text" size="50" default="" label="PLG_AKPAYMENT_SKRILL_MERCHANT_LABEL" description="PLG_AKPAYMENT_SKRILL_MERCHANT_DESC"/>
				<field name="secret" type="text" size="50" default="" label="PLG_AKPAYMENT_SKRILL_SECRET_LABEL" description="PLG_AKPAYMENT_SKRILL_SECRET_DESC"/>

				<field type="spacer" />
				<field name="company" type="text" size="30" default="" label="PLG_AKPAYMENT_SKRILL_COMPANY_LABEL" description="PLG_AKPAYMENT_SKRILL_COMPANY_DESC"/>
				<field name="language" type="radio" default="0" label="PLG_AKPAYMENT_SKRILL_LANGUAGE_LABEL" description="PLG_AKPAYMENT_SKRILL_LANGUAGE_DESC">
					<option value="EN">PLG_AKPAYMENT_SKRILL_LANGUAGE_EN</option>
					<option value="DE">PLG_AKPAYMENT_SKRILL_LANGUAGE_DE</option>
					<option value="ES">PLG_AKPAYMENT_SKRILL_LANGUAGE_ES</option>
					<option value="FR">PLG_AKPAYMENT_SKRILL_LANGUAGE_FR</option>
					<option value="IT">PLG_AKPAYMENT_SKRILL_LANGUAGE_IT</option>
					<option value="PL">PLG_AKPAYMENT_SKRILL_LANGUAGE_PL</option>
					<option value="GR">PLG_AKPAYMENT_SKRILL_LANGUAGE_GR</option>
					<option value="RO">PLG_AKPAYMENT_SKRILL_LANGUAGE_RO</option>
					<option value="RU">PLG_AKPAYMENT_SKRILL_LANGUAGE_RU</option>
					<option value="TR">PLG_AKPAYMENT_SKRILL_LANGUAGE_TR</option>
					<option value="CN">PLG_AKPAYMENT_SKRILL_LANGUAGE_CN</option>
					<option value="CZ">PLG_AKPAYMENT_SKRILL_LANGUAGE_CZ</option>
					<option value="NL">PLG_AKPAYMENT_SKRILL_LANGUAGE_NL</option>
					<option value="DA">PLG_AKPAYMENT_SKRILL_LANGUAGE_DA</option>
					<option value="SV">PLG_AKPAYMENT_SKRILL_LANGUAGE_SV</option>
					<option value="FI">PLG_AKPAYMENT_SKRILL_LANGUAGE_FI</option>
				</field>
				<field name="confnotice" type="text" size="30" default="" label="PLG_AKPAYMENT_SKRILL_CONFNOTICE_LABEL" description="PLG_AKPAYMENT_SKRILL_CONFNOTICE_DESC"/>
				<field name="header" type="text" size="50" default="" label="PLG_AKPAYMENT_SKRILL_HEADER_LABEL" description="PLG_AKPAYMENT_SKRILL_HEADER_DESC" />
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_SKRILL_SANDBOX_LABEL" description="PLG_AKPAYMENT_SKRILL_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
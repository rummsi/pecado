<?xml version="1.0" encoding="utf-8"?>
<extension overwrite="true" version="1.5" type="plugin" group="xmlrpc" method="upgrade">
	<name>Joooid XMLRPC</name>
	<author>Weracle</author>
	<creationDate>June 2011</creationDate>
	<copyright>(C) 2009 - 2013 Weracle</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>stefano.norcia@gmail.com</authorEmail>
	<authorUrl>http://www.joooid.com</authorUrl>
	<version>2.6.0</version>
	<description>PLGJOOOID_DESC</description>
	<files>
		<filename plugin="joooid">joooid.php</filename>
		<filename plugin="joooid">index.html</filename>
		<folder>xml</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_xmlrpc_joooid.ini</language>
		<language tag="en-GB">languages/en-GB.plg_xmlrpc_joooid.sys.ini</language>
	</languages>
	<config>
	<fields name ="params" >
		<fieldset name="basic">
		
		<field name="userfolder" type="radio" default="0" label="PLG_JOOOID_USER_FOLDER" description="PLG_JOOOID_USER_FOLDER_DESC" >
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		<field name="overwrite" type="radio" default="0" label="PLG_JOOOID_OVERWRITE" description="Overwrite if the same file name" >
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		
		<field name="featured" type="radio" default="0" label="PLG_JOOOID_FEATURED" description="PLG_JOOOID_FEATURED_DESC">
			<option value="0">JNo</option>
			<option value="1">JYes</option>
		</field>
		
		<field name="language" type="contentlanguage" default="*" label="PLG_JOOOID_LANGUAGE" description="PLG_JOOOID_LANGUAGE_DESC">
			<option value="*">JALL</option>
		</field>
		
		</fieldset>
	</fields>
	</config>
		<updateservers>
	   <server type="extension" priority="1" name="Joooid XMLRPC">http://www.joooid.com/updates/update_plugin.xml</server>
	</updateservers>
</extension>
